{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./_build",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "target": "ES5"
  },
  "files": [
    "./node_modules/intern/typings/dojo2/dojo.d.ts",
    "./types/decompress/decompress.d.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
